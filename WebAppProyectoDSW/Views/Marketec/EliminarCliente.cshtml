@model WebAppProyectoDSW.Models.Cliente

@{
    ViewData["Title"] = "EliminarCliente";
}

<link rel="stylesheet" href="~/css/estilos.css" />
@Html.Partial("_VistaParcial")

<h4>Eliminar Datos del Cliente</h4>

<div class="contenedor">
<br />

<h3>¿Está seguro de Eliminar los datos del Cliente?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EliminarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>
                <input asp-for="idCliente" class="form-control" readonly="readonly" />
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreCliente" class="control-label"></label>
                <input asp-for="nombreCliente" class="form-control " readonly="readonly" />
                <span asp-validation-for="nombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" readonly="readonly"/>
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idPais" class="control-label"></label>
                <input asp-for="idPais" class="form-control" readonly="readonly"/>
                <span asp-validation-for="idPais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono" class="control-label"></label>
                <input asp-for="telefono" class="form-control" readonly="readonly"/>
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
                <a asp-action="ListarClientes" class="btn btn-info">Listado</a>
            </div>
        </form>
    </div>
</div>

<div>
    @ViewBag.mensaje
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
