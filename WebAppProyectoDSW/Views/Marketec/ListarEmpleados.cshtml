@model IEnumerable<WebAppProyectoDSW.Models.Empleado>

@{
    ViewData["Title"] = "ListarEmpleados";
}

<link rel="stylesheet" href="~/css/estilos.css" />


@Html.Partial("_VistaParcial")

<h4>Lista de empleados</h4>

<div class="contenedor">
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Apellidos
            </th>
            <th>
                Nombres
            </th>
            <th>
                Fecha de nacimiento
            </th>
            <th>
                Fecha de contrato
            </th>
            <th>
                Correo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apeEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecNac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecCon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
               <a>@Html.ActionLink("", "EditarEmpleado", new { id=item.idEmpleado }) <img src="~/img/edit.png"> </a>
               <a> @Html.ActionLink("", "EliminarEmpleado", new {  id=item.idEmpleado}) <img src="~/img/delete.png"></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>