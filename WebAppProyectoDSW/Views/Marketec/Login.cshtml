@model WebAppProyectoDSW.Models.Usuario

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/estilos.css" />

<div class="fondologin">
    <div class="divlogin">
        <h2><img class="imglogin" src=~/img/logo.png/></h2>
        <h2>Ingresar al sistema</h2>
        <hr />
        <div class="row">
            
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>Correo: </label>
                        <input asp-for="correo" class="form-control" />
                        <span asp-validation-for="correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Contraseña: </label>
                        <input asp-for="clave" class="form-control" type="password"/>
                        <span asp-validation-for="clave" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group" style="text-align: center;">
                        <input type="submit" value="Ingresar" class="btn btn-dark btn-lg" />
                    </div>
                </form>
            <div>

            </div>
        </div>
        <br />
        <div>
            <p class="plog">¿No tienes cuenta? <a asp-action="LoginRegistrarEmpleado">Regístrate.</a></p>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
